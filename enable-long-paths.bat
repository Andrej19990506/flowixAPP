@echo off
echo ========================================
echo Включение длинных путей в Windows
echo ========================================
echo.
echo Этот скрипт требует прав администратора!
echo.
pause

reg add "HKLM\SYSTEM\CurrentControlSet\Control\FileSystem" /v LongPathsEnabled /t REG_DWORD /d 1 /f

if %errorlevel% equ 0 (
    echo.
    echo ========================================
    echo УСПЕШНО! Длинные пути включены!
    echo ========================================
    echo.
    echo ВАЖНО: Необходима ПЕРЕЗАГРУЗКА компьютера!
    echo После перезагрузки проблема будет решена.
    echo.
) else (
    echo.
    echo ========================================
    echo ОШИБКА! Не удалось изменить реестр.
    echo ========================================
    echo Убедитесь, что запускаете от имени администратора!
    echo.
)

pause

